# ============================================
# FloatChat Ultra - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://floatchat_user:your_password_here@localhost:5432/floatchat
DB_HOST=localhost
DB_PORT=5432
DB_NAME=floatchat
DB_USER=floatchat_user
DB_PASSWORD=your_password_here

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Ollama LLM Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct
# Alternative models: mixtral:8x7b-instruct, llama3.1:70b
OLLAMA_TEMPERATURE=0.1
OLLAMA_NUM_CTX=8192

# ============================================
# ChromaDB Configuration
# ============================================
CHROMA_PERSIST_DIRECTORY=./data/chromadb
CHROMA_COLLECTION_NAME=argo_metadata

# ============================================
# Embedding Model Configuration
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# ============================================
# Data Paths
# ============================================
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
DATA_LOGS_DIR=./data/logs

# ============================================
# ARGO Data Sources
# ============================================
ARGO_GDAC_FTP=ftp.ifremer.fr
ARGO_GDAC_PATH=/ifremer/argo
ARGO_INDEX_URL=https://data-argo.ifremer.fr/ar_index_global_prof.txt

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# ============================================
# Streamlit Configuration
# ============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>

# ============================================
# Application Settings
# ============================================
APP_NAME=FloatChat Ultra
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
DEBUG=True

# ============================================
# Performance Settings
# ============================================
MAX_WORKERS=10
CACHE_TTL=3600
QUERY_TIMEOUT=30
MAX_RESULTS=10000
